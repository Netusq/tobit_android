<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start_game_with_friend"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:onClick="startGameWithFriend"
        android:text="@string/players_two"
        app:layout_constraintBottom_toTopOf="@+id/start_game_with_pc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.678" />

    <Button
        android:id="@+id/start_game_with_pc"
        android:layout_width="125dp"
        android:layout_height="50dp"
        android:onClick="startGameWithPc"
        android:text="@string/pc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/start_game_with_friend"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/start_game_with_friend"
        app:layout_constraintTop_toBottomOf="@id/start_game_with_friend"
        app:layout_constraintVertical_bias="0.182" />


</androidx.constraintlayout.widget.ConstraintLayout>